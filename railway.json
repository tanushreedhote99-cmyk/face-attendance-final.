{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["python311", "cmake", "gcc", "g++", "libopencv-dev"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "python3 app.py",
    "restartPolicyType": "ON_FAILURE"
  }
}