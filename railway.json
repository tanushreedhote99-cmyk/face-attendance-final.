{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["python311", "cmake", "gcc", "g++", "libopencv-dev"]
        },
        "install": {
          "cmds": ["pip install --upgrade pip", "pip install -r requirements.txt"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "python app.py"
  }
}